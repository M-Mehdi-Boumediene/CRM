{% extends 'base.html.twig' %}

{% block title %}Progressions & Resultats
{% endblock %}

{% block body %}
	<style>
		.accordion {
			background-color: #eee;
			color: #444;
			cursor: pointer;
			padding: 18px;
			width: 100%;
			border: none;
			text-align: left;
			outline: none;
			font-size: 15px;
			transition: 0.4s;
		}
		.active,
		.accordion:hover {
			background-color: none;
		}
		.panel {
			padding: 0 18px;
			display: none;
			background: none;
			overflow: hidden;
		}
		.accordion {
			margin: 0;
			padding: 0;
			background: none;
		}
		.bloc {
			background-color: none;
			color: black;
			padding: 0;
		}
		.bloc:hover {
			background-color: none;
			color: black;
			padding: 0;
		}
		.module {
			background: none;
			color: black;
			padding-top: 8px;
		}
		.module:hover {
			background: none;
			color: black;
		}
		.chapitre {
			background-color: #7587a7;
			color: white;
		}
		.chapitre:hover {
			background-color: #7587a7;
			color: white;
		}
		b,
		strong {
			font-weight: 500;
		}
	</style>
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="pe-7s-check icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Progressions & resultats
								<div class="page-title-subheading">Informations</div>
							</div>
						</div>
						<div class="page-title-actions">
							{% if is_granted('ROLE_INTERVENANT', 'ROLE_ADMIN')  %}{% endif %}

						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="row">

						<div class="col-md-12">
							<div class="main-card mb-3 card">
								<div class="card-body">

									{% for etudiant in etudiant %}
										<div id="accordion" class="accordion-wrapper mb-3">
											<div class="card">
												<div id="headingOne" class="card-header">
													<button type="button" data-toggle="collapse" data-target="#collapseOne1" aria-expanded="false" aria-controls="collapseOne" class="text-left m-0 p-0 btn btn-link btn-block collapsed">
														<h5 class="m-0 p-0">Classe:
															{{etudiant.classes.nom}}</h5>
													</button>
												</div>
												<div data-parent="#accordion" id="collapseOne1" aria-labelledby="headingOne" class="collapse" style="">
													<div class="card-body">
														{% for note in notes %}
															<div id="accordion2" class="accordion-wrapper mb-3">
																<div class="card">
																	<div id="headingOne" class="card-header">

																		<button type="button" data-toggle="collapse" data-target="#collapseOne2" aria-expanded="false" aria-controls="collapseOne" class="text-left m-0 p-0 btn btn-link btn-block collapsed">
																			<h5 class="m-0 p-0">Bloc:
																				{{note.module.bloc.nom}}</h5>
																		</button>
																	</div>
																	<div data-parent="#accordion2" id="collapseOne2" aria-labelledby="headingOne" class="collapse" style="">
																		<div class="card-body">
																			{% for module in note.module.bloc.modules %}
																				<div id="accordion3" class="accordion-wrapper mb-3">
																					<div class="card">
																						<div id="headingOne" class="card-header">

																							<button type="button" data-toggle="collapse" data-target="#collapseOne3" aria-expanded="false" aria-controls="collapseOne" class="text-left m-0 p-0 btn btn-link btn-block collapsed">
																								<h5 class="m-0 p-0">Module:
																									{{module.nom}}</h5>
																							</button>
																						</div>
																						<div data-parent="#accordion3" id="collapseOne3" aria-labelledby="headingOne" class="collapse" style="">
																							<div class="card-body">
																								<b>
																									Type :
																								</b>
																								{{note.type}}
																								&ensp; &ensp; &ensp;
																								<b>
																									Coefficient :
																								</b>
																								{{note.module.coefficient}}
																								&ensp; &ensp; &ensp;
																								<b>Note :
																								</b>
																								{{note.note}}/20
																							</div>
																						</div>
																					</div>

																				</div>
																			{% endfor %}
																		</div>
																	</div>
																</div>

															</div>
														{% endfor %}

													</div>
												</div>

											</div>


										</div>


									{% endfor %}
								</div>


							</div>


						</div>
					</div>
				</div>
				<script>
					var acc = document.getElementsByClassName("accordion");
var i;
for (i = 0; i < acc.length; i++) {
acc[i].addEventListener("click", function () {
this.classList.toggle("active");
var panel = this.nextElementSibling;
if (panel.style.display === "block") {
panel.style.display = "none";
} else {
panel.style.display = "block";
}
});
}
				</script>
			{% endblock %}
