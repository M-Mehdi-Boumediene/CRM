{% extends 'base.html.twig' %}

{% block title %}Blocs
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="pe-7s-menu icon-gradient bg-ripe-malin"></i>
							</div>
							<div>Blocs
								<div class="page-title-subheading">Liste des blocs</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_blocs_new') }}">
									<button class="btn-shadow btn btn-primary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-plus fa-w-20"></i>
										</span>
										Ajouter un bloc
									</button>
								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">
							{{ form_start(form) }}
							<div class="row">
								<div style="
																																																																																																																								    text-align: right;
																																																																																																																								    margin-top: 8px;
																																																																																																																									    margin-left: 17px;
																																																																																																																								">
									<b>
										Filtrer par :
									</b>
								</div>
								<div class="col-md-2">
									{{ form_row(form.classe,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.classe) }}
								</div>
								<div class="col-md-2">
									{{ form_row(form.module,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.module) }}
								</div>
								<div class="col-md-2">
									{{ form_row(form.apprenant,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.apprenant) }}
								</div>
								<div class="col-md-2">
									{{ form_row(form.intervenants,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.intervenants) }}
								</div>
								<div class="col-md-2" style="display:none;">
									{{ form_row(form.bloc,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.bloc) }}
								</div>


								<button class="mb-2 mr-2 btn btn-gradient-primary" style="    margin-top: 3px;
																																																		    margin-left: 14px;">
									<i class="fa fa-fw" aria-hidden="true" title="Copy to use filter"></i>
									{{ button_label|default('Filtrer') }}</button>


							</div>

							{{ form_end(form) }}
							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

								<div class="row">
									<div class="col-sm-12">
										<table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
											<thead>
												<tr role="row">

													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Nom</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Classe</th>

													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 110.2px;" aria-label="Start date: activate to sort column ascending">actions</th>


												</tr>
											</thead>
											<tbody>

												{% for bloc in blocs %}
													<tr role="row" class="odd">

														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_blocs_show', {'id': bloc.id}) }}">
																{{ bloc.nom }}
															</a>
														</td>
														<td class="sorting_1 dtr-control">

															<a href="{{ path('app_classes_show', {'id': bloc.classe.id}) }}">{{ bloc.classe.nom }}</a>

														</td>


														<td class="sorting_1 dtr-control">

															<a href="{{ path('app_blocs_edit', {'id': bloc.id}) }}">
																<button class="mb-2 mr-2 btn-icon btn-pill btn btn-link">
																	<i class="pe-7s-tools btn-icon-wrapper"></i>Modifier</button>
															</a>
														</td>
													</tr>
												{% else %}
													<tr role="row" class="odd">
														<td class="sorting_1 dtr-control" colspan="6">no records found</td>
													</tr>
												{% endfor %}

											</tbody>

										</table>
										<nav class="" aria-label="Page navigation example">
											<ul class="pagination" style="float:right;">
												<li class="page-item">
													<a href="javascript:void(0);" class="page-link" aria-label="Previous">
														<span aria-hidden="true">«</span>
														<span class="sr-only">Previous</span>
													</a>
												</li>
												<li class="page-item">
													<a href="javascript:void(0);" class="page-link">1</a>
												</li>
												<li class="page-item active">
													<a href="javascript:void(0);" class="page-link">2</a>
												</li>
												<li class="page-item">
													<a href="javascript:void(0);" class="page-link">3</a>
												</li>
												<li class="page-item">
													<a href="javascript:void(0);" class="page-link">4</a>
												</li>
												<li class="page-item">
													<a href="javascript:void(0);" class="page-link">5</a>
												</li>
												<li class="page-item">
													<a href="javascript:void(0);" class="page-link" aria-label="Next">
														<span aria-hidden="true">»</span>
														<span class="sr-only">Next</span>
													</a>
												</li>
											</ul>
										</nav>
									</div>
								</div>


							</div>
						</div>
					</div>


				</div>

			</div>

		</div>
	</div>

	{{ block("Footer", "Menus/Footer.html.twig") }}
	<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>

	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>

	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

	<script>

		$(document).ready(function () {
$('#filtre_apprenant').select2();
$('#filtre_intervenants').select2();
$('#filtre_classe').select2();
$('#filtre_bloc').select2();
$('#filtre_module').select2();
});
	</script>
{% endblock %}
