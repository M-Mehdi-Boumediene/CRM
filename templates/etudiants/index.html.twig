{% extends 'base.html.twig' %}

{% block title %}Etudiants
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">

			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Etudiants
								<div class="page-title-subheading">Gestion des étudiants</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_etudiants_new') }}">
									<button class="btn-shadow btn btn-success">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-plus fa-w-20"></i>
										</span>
										Ajouter un étudiant
									</button>
								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">
							{{ form_start(form) }}
							<div class="row">
								<div style="
																																																																																																																																		    text-align: right;
																																																																																																																																		    margin-top: 8px;
																																																																																																																																			    margin-left: 17px;
																																																																																																																																		">
									<b>
										Filtrer par :
									</b>
								</div>
								<div class="col-md-2">
									{{ form_row(form.classe,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.classe) }}
								</div>
								<div class="col-md-2">
									{{ form_row(form.module,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.module) }}
								</div>
								<div class="col-md-2">
									{{ form_row(form.apprenant,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.apprenant) }}
								</div>
								<div class="col-md-2">
									{{ form_row(form.intervenants,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.intervenants) }}
								</div>
								<div class="col-md-2" style="display:none;">
									{{ form_row(form.bloc,{'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.bloc) }}
								</div>


								<button class="mb-2 mr-2 btn btn-gradient-primary" style="    margin-top: 3px;
																																																												    margin-left: 14px;">
									<i class="fa fa-fw" aria-hidden="true" title="Copy to use filter"></i>
									{{ button_label|default('Filtrer') }}</button>


							</div>

							{{ form_end(form) }}
							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

								<div class="row">
									<div class="col-sm-12">
										<table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
											<thead>
												<tr role="row">

													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Nom</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Téléphone</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Email</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Classe</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 110.2px;" aria-label="Start date: activate to sort column ascending">Actions</th>

												</tr>
											</thead>
											<tbody>

												{% for etudiant in etudiants %}
													<tr role="row" class="odd">
														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_etudiants_show', {'id': etudiant.id}) }}">
																{{ etudiant.nom }}
																{{ etudiant.prenom }}
															</a>
														</td>

														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_etudiants_show', {'id': etudiant.id}) }}">
																{{ etudiant.telephone }}
															</a>
														</td>

														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_etudiants_show', {'id': etudiant.id}) }}">
																{{ etudiant.email }}
															</a>
														</td>


														<td class="sorting_1 dtr-control">
															{% if etudiant.classes %}

																<a href="{{ path('app_etudiants_show', {'id': etudiant.classes.id}) }}">{{ etudiant.classes.nom }}</a>


															{% else %}
																Sans classe

															{% endif  %}
														</td>


														<td class="sorting_1 dtr-control">

															<a href="{{ path('app_etudiants_edit', {'id': etudiant.id}) }}">
																<button class="mb-2 mr-2 btn-icon btn-pill btn btn-link">
																	<i class="pe-7s-tools btn-icon-wrapper"></i>Modifier</button>
															</a>
														</td>
													</tr>
												{% else %}
													<tr role="row" class="odd">
														<td class="sorting_1 dtr-control" colspan="6">Aucun resultat</td>
													</tr>
												{% endfor %}

											</tbody>

										</table>
									</div>
								</div>


							</div>
						</div>
					</div>


				</div>
			</div>

		</div>

	</div>
	{{ block("Footer", "Menus/Footer.html.twig") }}

	<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>

	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>

	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

	<script>

		$(document).ready(function () {
$('#filtre_apprenant').select2();
$('#filtre_intervenants').select2();
$('#filtre_classe').select2();
$('#filtre_bloc').select2();
$('#filtre_module').select2();
});
	</script>
{% endblock %}
