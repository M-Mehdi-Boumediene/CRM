{% extends 'base.html.twig' %}

{% block title %}Documents administratifs
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Documents Administratifs
								
							</div>
						</div>
						<div class="page-title-actions">
{% if app.user.roles[0] == "ROLE_ADMIN" %}
							<div class="d-inline-block dropdown">
								<a href="{{ path('app_docadmins_new') }}">
									<button class="btn-shadow btn btn-success">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-plus fa-w-20"></i>
										</span>
										Ajouter des fichiers
									</button>
								</a>
							</div>
{% else %}

{% endif %}
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">
							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

								<div class="row">
									<div class="col-sm-12">
										<table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
											<thead>
												<tr role="row">

							<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Date</th>

									
          
                <th>Type</th>
          
                 <th>Classe</th>
                <th>actions</th>
												</tr>
											</thead>
											<tbody>

												{% for docadmin in docadmins %}
					 

                <td>{{ docadmin.createdAt ? docadmin.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ docadmin.type }}</td>
              
                                          <td>{{ docadmin.classe }}</td>
                                          <td><a href="{{asset('uploads/')}}{{ docadmin.nom }}">Telecharger le document</a></td>
													</tr>
											
											
												{% endfor %}

											</tbody>

										</table>
									</div>
								</div>


							</div>
						</div>
					</div>


				</div>
			</div>

		</div>

	{% endblock %}






