

{% extends 'base.html.twig' %}

{% block title %}Cv
{% endblock %}

{% block body %}
	<style>
		form {
			display: contents;
		}
		.select2{
			width: 100% !important;
	

    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;

    border-radius: 0.25rem;
		}
		.page,.current,.previous,.first,.next,.last{
    border: solid 1px;
    padding: 5px;
    margin: 2px;
}
	</style>
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}


		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="pe-7s-menu icon-gradient bg-ripe-malin"></i>
							</div>
							<div>CV
								<div class="page-title-subheading">Liste des Cvs</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="#">
									<button class="btn-shadow btn btn-primary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-plus fa-w-20"></i>
										</span>
										Ajouter CV
									</button>
								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">

							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

								<div class="row">
									<div class="col-sm-12">
										
											<table class="table">
        <thead>
            <tr>
                 <th>Titre</th>
                <th>Entreprise</th>
                <th>Debut</th>
                <th>Fin</th>
                
                <th>Formation</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
 
                <td>{{ cv.titre }}</td>
                <td>{{ cv.entreprise }}</td>
                <td>{{ cv.debut ? cv.debut|date('Y-m-d') : '' }}</td>
                <td>{{ cv.fin ? cv.fin|date('Y-m-d') : '' }}</td>
                <td>{{ cv.formation }}</td>
                <td>{{ cv.description }}</td>
                <td>
                    <a href="{{ path('app_cv_show', {'id': cv.id}) }}">Visualiser</a>
                    <br>
                    <a href="{{ path('app_cv_edit', {'id': cv.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
										</nav>
							
									</div>
								</div>


							</div>
						</div>
					</div>


				</div>

			</div>

		</div>
	</div>

	{{ block("Footer", "Menus/Footer.html.twig") }}
	<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>

	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>

	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>	
{% endblock %}
