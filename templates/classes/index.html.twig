{% extends 'base.html.twig' %}

{% block title %}Classes
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}

		<style>
			.page,
			.current,
			.previous,
			.first,
			.next,
			.last {
				border: solid 1px;
				padding: 5px;
				margin: 2px;
			}
		</style>
		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="pe-7s-culture icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Classes
								<div class="page-title-subheading">Liste des classes</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
								<a href="{{ path('app_classes_new') }}">
									<button class="btn-shadow btn btn-primary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-plus fa-w-20"></i>
										</span>
										Ajouter une classe
									</button>
								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">

							<div class="search-wrapper">

								<div class="input-holder">

									{{ form_start(form2) }}


									{{ form_row(form2.search,{'attr': {'class': 'search-input'}}) }}
									{{ form_errors(form2.search) }}

									{{ form_end(form2) }}

									<button class="search-icon">
										<span></span>
									</button>
								</div>
								<button class="close"></button>
							</div>

							<div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

								<div class="row">
									<div class="col-sm-12">
										<table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
											<thead>
												<tr role="row">

													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Nom</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Année scolaire</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 233.2px;" aria-label="Position: activate to sort column ascending">Cursus</th>
													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 110.2px;" aria-label="Start date: activate to sort column ascending">Nombre de semestres</th>

													<th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 110.2px;" aria-label="Start date: activate to sort column ascending">Action</th>


												</tr>
											</thead>
											<tbody>

												{% for class in classes %}
													<tr role="row" class="odd">

														<td class="sorting_1 dtr-control">
															<a href="{{ path('app_classes_show', {'id': class.id}) }}">{{ class.nom }}</a>
														</td>

														<td class="sorting_1 dtr-control">

															<a href="{{ path('app_classes_show', {'id': class.id}) }}">{{ class.anneescolaire}}</a>

														</td>

														<td class="sorting_1 dtr-control">


															<a href="{{ path('app_users_show', {'id': class.id}) }}">

																{{class.curus}}


															</a>

														</td>
														<td class="sorting_1 dtr-control">


															<a href="{{ path('app_users_show', {'id': class.id}) }}">

																{{class.nbsemestre}}


															</a>

														</td>

														<td class="sorting_1 dtr-control">

															<a href="{{ path('app_classes_edit', {'id': class.id}) }}">
																<button class="mb-2 mr-2 btn-icon btn-pill btn btn-link">
																	<i class="pe-7s-tools btn-icon-wrapper"></i>Modifier</button>
															</a>
														</td>
													</tr>
												{% else %}
													<tr role="row" class="odd">
														<td class="sorting_1 dtr-control" colspan="6">aucun résultat</td>
													</tr>
												{% endfor %}

											</tbody>

										</table>

										<nav class="" aria-label="Page navigation example" style="float:right;">
											{{ knp_pagination_render(classes) }}
										</nav>
									</div>
								</div>


							</div>
						</div>
					</div>


				</div>
			</div>

		</div>
	</div>
	{{ block("Footer", "Menus/Footer.html.twig") }}
	<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>

	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>

	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

	<script>

		$(document).ready(function () {
$('#filtre_apprenant').select2();
$('#filtre_intervenants').select2();
$('#filtre_classe').select2();
$('#filtre_bloc').select2();
$('#filtre_module').select2();
});
	</script>
{% endblock %}
