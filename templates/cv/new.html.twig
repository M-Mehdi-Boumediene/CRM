{% extends 'base.html.twig' %}

{% block title %}Nouveau CV
{% endblock %}

{% block body %}
	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}

		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="lnr-users icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Remplissez votre CV
								<div class="page-title-subheading">
									Créez votre nouveau CV</div>
							</div>
						</div>
						<div class="page-title-actions">
							<div class="d-inline-block dropdown">
								<a href="{{ path('app_cv_index') }}">
									<button class="mb-2 mr-2 btn btn-shadow btn-outline-2x btn-outline-secondary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-arrow-circle-left fa-w-20"></i>
										</span>
										Retour à la liste
									</button>
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="tabs-animation">
					<div class="main-card mb-3 card">
						<div class="card-body">

							<div class="row">
								<div class="col-sm-12">
									
{{ form_start(form) }}

<div class="form-row">
	<div class="col-md-3">

		{{ form_row(form.entreprise,{'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.entreprise) }}
	</div>

	<div class="col-md-3">
		{{ form_row(form.ecole,{'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.ecole) }}
	</div>
		
	<div class="form-row">
		<div class="col-md-12">
		{{ form_row(form.formation,{'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.formation) }}
		</div>
	</div>
	<div class="form-row">
		<div class="col-md-12">
		{{ form_row(form.debut,{'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.debut) }}
		</div>
		<div class="col-md-12">
		{{ form_row(form.fin,{'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.fin) }}
		</div>
		<div class="col-md-12">
		{{ form_row(form.titre,{'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.titre) }}
		</div><div class="col-md-12">
		{{ form_row(form.description,{'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.description) }}
		</div>
	</div>
</div>


<br>
<button class="mt-1 btn btn-success">{{ button_label|default('Sauvegarder') }}</button>
ou
<a href="{{ path('app_cv_index') }}">Retour à la liste</a>

{{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{{ block("Footer", "Menus/Footer.html.twig") }}
{% endblock %}
