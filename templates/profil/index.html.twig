{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}

	{{ block("MenuTop", "Menus/MenuTop.html.twig") }}
	<div class="app-main">
		{{ block("MenuLeft", "Menus/MenuLeft.html.twig") }}

		<style>
			form {
				display: contents;
			}
			.select2 {
				width: 100% !important;


				font-size: 1rem;
				font-weight: 400;
				line-height: 1.5;
				color: #495057;
				background-color: #fff;
				background-clip: padding-box;

				border-radius: 0.25rem;
			}
			.page,
			.current,
			.previous,
			.first,
			.next,
			.last {
				border: solid 1px;
				padding: 5px;
				margin: 2px;
			}
		</style>
		<div class="app-main__outer">
			<div class="app-main__inner">
				<div class="app-page-title">
					<div class="page-title-wrapper">
						<div class="page-title-heading">
							<div class="page-title-icon">
								<i class="pe-7s-id icon-gradient bg-strong-bliss"></i>
							</div>
							<div>Mon Profil
								<div class="page-title-subheading">Informations du compte</div>
							</div>
						</div>
						<div class="page-title-actions">

							<div class="d-inline-block dropdown">
							<a href="#">
									<button class="btn-shadow btn btn-primary">
										<span class="btn-icon-wrapper pr-2 opacity-7">
											<i class="fa fa-plus fa-w-20"></i>
										</span>
										Modifier mon parcours pro
									</button>
								</a>
							</div>
						</div>
					</div>
				</div>

				<div class="tabs-animation">
					<div class="main-card mb-3 card">
				
						
					
		<div class="row">
		<div class="col-sm-12">
										

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-12 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
        <div class="user-avatar user-avatar-xl fileinput-button">
        {{ form_start(form) }}
		{% if photoprofil %}
              <img class="rounded-circle mt-5" width="150px" src="{{ asset('uploads/'  ~ photoprofil.image)}} ">
       {% else %}
	   
	   {% endif %}
	            {{ form_row(form.image,{'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.image) }}
        </div>
 
  </div>
 </div>
        <div class="col-md-12 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right"></h4>
                </div>
               
                <div class="row mt-2">
                    <div class="col-md-6">
                        {{ form_row(form.nom,{'attr': {'class': 'form-control','value': nom }}) }}
                        {{ form_errors(form.nom) }}

                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.prenom,{'attr': {'class': 'form-control','value': prenom }}) }}
                        {{ form_errors(form.prenom) }}
                    
                    </div>
                </div>
				  <div class="row mt-2">
                    <div class="col-md-6">
                        {{ form_row(form.adresse,{'attr': {'class': 'form-control','value': nom }}) }}
                        {{ form_errors(form.adresse) }}

                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.telephone,{'attr': {'class': 'form-control','value': prenom }}) }}
                        {{ form_errors(form.telephone) }}
                    
                    </div>
                </div>
                  
                <div class="mt-5 text-center">     
              	 <button type="submit" class="mt-1 btn btn-success">{{ button_label|default('Sauvegarder') }}</button>
                
                {{ form_end(form) }}
                </div>
       
            </div>
        </div>
</div>
</div>
</div>
									</div>
								</div>


							</div>
						</div>
					</div>


				</div>
			</div>

		</div>
	</div>
	{{ block("Footer", "Menus/Footer.html.twig") }}



{% endblock %}
